<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ti"
    android:fitsSystemWindows="true"
    tools:context=".FavoritesFragment"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView

            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:background="@drawable/rounded" />

        <TextView
            android:id="@+id/errortext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/bar"
        android:fontFamily="@font/cairo"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:text="العبارات المفضلة"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

        <ListView
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            android:id="@+id/favlist"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:clickable="true"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp">

        </ListView>

</LinearLayout>
    <RelativeLayout
        android:id="@+id/area2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/screen"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:padding="16dp">

            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_black_24dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/screen"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="0.3"
            android:background="@drawable/rounded" />


        <TextView
            android:id="@+id/fullsentence"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="115dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/cairo"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/fullsentence"
            android:layout_alignEnd="@id/fullsentence"
            android:layout_alignRight="@id/fullsentence">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/unfav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:button="@drawable/favcheckbox"
                    android:checked="true"
                    android:stateListAnimator="@anim/favanimate" />

                <ImageView
                    android:id="@+id/collection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/share" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>