<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".MyAccount"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/curs"
        app:elevation="0dp"
        app:headerLayout="@layout/nav_header_main"
        app:itemBackground="@color/ti"
        app:itemIconPadding="60dp"
        app:itemTextAppearance="@style/Widget.Design.NavigationView"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/drawer_menu"
        app:theme="@style/navItems" />


    <RelativeLayout
        android:id="@+id/bgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/whiteScreen"
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_centerInParent="true"
            android:alpha=".4"
            android:scaleType="centerCrop"
            android:src="@drawable/g" />


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="520dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Email"
                    android:fontFamily="@font/curs"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/curs"
                    android:textColor="#1E1818"
                    android:textSize="24sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:padding="8dp"
                    android:id="@+id/favtv"
                    android:text="My Favorites"
                    android:fontFamily="@font/curs"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/collecttv"
                    android:text="My Collections"
                    android:fontFamily="@font/curs"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/whiteScreen"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:text="Log out" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>

