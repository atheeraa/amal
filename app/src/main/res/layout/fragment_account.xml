<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ti"
    android:fitsSystemWindows="true"
    tools:context=".AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ti"
        android:fitsSystemWindows="true"
        tools:context=".Sign"
        tools:openDrawer="start">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/n"

            />

        <TextView
            android:id="@+id/logotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-16dp"
            android:fontFamily="@font/cairo"
            android:text="دَفْعَة"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />


        <ImageView
            android:id="@+id/alpha"
            android:layout_width="100dp"
            android:layout_height="5000dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:alpha=".3"
            android:background="@drawable/cloud"
            android:scaleType="centerCrop"
            android:scaleX="11"
            android:scaleY="1.7" />


        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signinchoice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="14dp"
                android:text="الدخول"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signupchoice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="14dp"
                android:text="تسجيل اشتراك"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/signupscreen"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="الاسم"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nameup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"

                android:textSize="14sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="الإيميل"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/emailup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="كلمة المرور"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/passwordup"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="12dp"
                android:paddingBottom="8dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="تأكيد كلمة المرور"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded"
                android:text="تسجيل"
                android:textColor="#3F51B5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tosignin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cairo"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"
                android:text="لديك حساب؟"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signinscreen"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="الإيميل"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:elevation="10dp"
                android:fontFamily="@font/cairo"
                android:padding="14dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"

                android:textSize="14sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="كلمة المرور"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="14dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/forgot"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cairo"
                android:paddingTop="32dp"
                android:paddingBottom="8dp"
                android:text="نسيت كلمة المرور؟"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signinbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded"
                android:text="الدخول"
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tosignup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cairo"
                android:paddingTop="32dp"
                android:paddingBottom="8dp"
                android:text="لا تملك حساب؟"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bar"
                app:labelVisibilityMode="unlabeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/tabs" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/cairo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="الإيميل"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded"
                android:fontFamily="@font/cairo"
                android:padding="14dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18sp" />


            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded"
                android:text="خروج"
                android:textColor="#3F51B5"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/verifyText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tosignin2"
            android:layout_centerInParent="true"
            android:layout_below="@id/verifyText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo"
            android:paddingTop="32dp"
            android:paddingBottom="8dp"
            android:text="تسجيل الدخول"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/forgotscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo"
             android:text="الإيميل"
            android:paddingBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailresetpass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:fontFamily="@font/cairo"
            android:padding="14dp"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/resend"
            android:layout_centerInParent="true"
            android:layout_below="@id/verifyText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairo"
            android:paddingTop="32dp"
            android:paddingBottom="8dp"
            android:text="إعادة تعيين كلمة المرور"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
    </RelativeLayout>
</FrameLayout>