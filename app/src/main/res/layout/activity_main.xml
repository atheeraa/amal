<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D24E9F3D"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"

        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:headerLayout="@layout/nav_header_main"
        app:itemBackground="@color/ti"
        app:itemIconPadding="60dp"
        app:itemTextAppearance="@style/Widget.Design.NavigationView"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/drawer_menu"
        android:fontFamily="@font/curs"
        app:theme="@style/navItems" />


    <RelativeLayout
        android:id="@+id/bgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/empty"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="8dp"
            android:shadowColor="@color/bg"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/curs"/>

        <ImageView
            android:id="@+id/whiteScreen"
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_centerInParent="true"
            android:alpha=".4"
            android:scaleType="centerCrop"
            android:src="@drawable/g" />

        <RelativeLayout
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="100dp"

                android:id="@+id/starter"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sentence"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="8dp"
                android:layout_weight="6"
                android:shadowColor="@color/bg"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/curs"/>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp">

                <CheckBox
                    android:id="@+id/fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="50dp"
                    android:paddingBottom="16dp"
                    android:layout_marginRight="50dp"
                    android:button="@drawable/favcheckbox"
                    android:checked="false"
                    android:stateListAnimator="@anim/favanimate" />

                <ImageView
                    android:id="@+id/collection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/collection" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/share" />
            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/collections_list"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>