<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

     <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
         android:background="@android:color/transparent"
        app:menu="@menu/drawer_menu"
         android:layout_marginTop="50dp"
         app:elevation="0dp"
        app:itemTextColor="#FFFFFF"
        app:itemTextAppearance="@style/Widget.Design.NavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconPadding="60dp"
         app:headerLayout="@layout/nav_header_main"
         app:theme="@style/navItems"
        app:itemBackground="@color/ti"
        android:fitsSystemWindows="true"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bgs"
    >
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:paddingRight="500dp"
        android:src="@drawable/bg"
       />



    <ImageView
        android:id="@+id/whiteScreen"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:alpha=".4"
        android:scaleType="centerCrop"
        android:src="@drawable/g" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/holder"
    android:layout_centerInParent="true">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mail"
        android:layout_centerInParent="true"
        android:id="@+id/starter"
        />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/area">
        <TextView
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="@color/bg"
             android:textColor="@android:color/white"
            android:id="@+id/sentence"
            />

           <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="300dp"
            android:layout_height="0dp"
               android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center">
               <CheckBox
                android:layout_marginLeft="16dp"
               android:checked="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/favcheckbox"
                android:id="@+id/fav"
                   android:stateListAnimator= "@anim/favanimate"/>
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/collection"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/collection"/>
            <ImageView
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/share"
                android:layout_height="wrap_content"
                android:src="@drawable/share"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/whiteScreen"
        android:layout_marginBottom="20dp"
        >



    </LinearLayout>

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>